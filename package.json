{
  "name": "angular-text-input-autocomplete",
  "version": "0.1.2",
  "description": "A angular 4+ directive for adding autocomplete functionality to text input elements, built around composability",
  "scripts": {
    "start": "concurrently --raw \"webpack-dev-server --open\" \"npm run test:watch\"",
    "build:demo": "webpack --env=production",
    "build:dist": "ng-packagr -p package.json",
    "build:clean": "del-cli dist",
    "test": "karma start --single-run && npm run build:dist && npm run build:clean",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivate --disableInternal --disableLifeCycleHooks --disableProtected",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && del-cli *.js *.js.map && npm run build:demo && npm run compodoc && git add . && git commit -m \"chore: build demo and docs\" && git push && git checkout master",
    "copyfiles": "copyfiles CHANGELOG.md dist",
    "prerelease": "npm test",
    "release:git": "git add package.json && git commit -m \"chore: bump version number\" && standard-version --first-release && git push --follow-tags origin master",
    "release:npm": "npm run build:dist && npm run copyfiles && npm publish dist",
    "release": "npm run release:git && npm run release:npm",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "commitlint -e",
    "codecov": "cat coverage/lcov.info | codecov",
    "precommit": "pretty-quick --staged"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts",
      "externals": {
        "textarea-caret": "getCaretCoordinates"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattlewis92/angular-text-input-autocomplete.git"
  },
  "keywords": [
    "angular4",
    "angular2",
    "angular"
  ],
  "author": "Matt Lewis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattlewis92/angular-text-input-autocomplete/issues"
  },
  "homepage": "https://github.com/mattlewis92/angular-text-input-autocomplete#readme",
  "devDependencies": {
    "@angular/common": "^4.4.7",
    "@angular/compiler": "^4.4.7",
    "@angular/compiler-cli": "^4.4.7",
    "@angular/core": "^4.4.7",
    "@angular/forms": "^4.4.7",
    "@angular/language-service": "^4.4.7",
    "@angular/platform-browser": "^4.4.7",
    "@angular/platform-browser-dynamic": "^4.4.7",
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/prompt": "^6.1.3",
    "@compodoc/compodoc": "^1.1.2",
    "@mattlewis92/webpack-karma-die-hard": "^1.0.4",
    "@ngtools/webpack": "^6.0.1",
    "@types/chai": "^4.1.3",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.8",
    "@types/sinon": "^4.3.3",
    "@types/sinon-chai": "^2.7.31",
    "@types/webpack": "^4.1.6",
    "chai": "^4.0.0",
    "codecov": "^3.0.2",
    "codelyzer": "^4.3.0",
    "commitizen": "^2.8.1",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "core-js": "^2.5.6",
    "del-cli": "^1.0.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "keyboardevent-key-polyfill": "^1.1.0",
    "mocha": "^5.1.1",
    "ng-packagr": "^1.7.0",
    "offline-plugin": "^5.0.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "rxjs": "^5.5.10",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "standard-version": "^4.3.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-mwl": "^0.2.2",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^3.1.4",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/core": ">=4.0.0 <7.0.0"
  },
  "dependencies": {
    "textarea-caret": "^3.1.0"
  }
}
